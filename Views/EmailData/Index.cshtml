@model BlogApp.Models.EmailData;

<div class="p-2 container mt-5 h-100">
    <form asp-action="SendEmailAdmin" asp-controller="EmailData" method="post">



        @if (User.Identity!.IsAuthenticated == false)
        {
            <div class="text-center">
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login to Send Email</a>
            </div>
        }
        else
        {
            @*User Email Address*@
            <div>
                <label>@Model.UserEmail</label>
                <input type="hidden" asp-for="UserEmail" />
            </div>

            @*Email Subject Line*@
            <div>
                <label asp-for="EmailSubject">Enter Subject line</label>
                <input type="text" asp-for="EmailSubject" />
            </div>

            @*Email Message*@
            <div>
                <label asp-for="EmailMessage">Enter Message</label>
                <textarea type="text" asp-for="EmailMessage" rows="5"></textarea>
            </div>

            <div class="col text-end">
                <button class="btn btn-primary rounded-pill btnlinks" type="submit">Send</button>
            </div>
        }
    </form>


</div>