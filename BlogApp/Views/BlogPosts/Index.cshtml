@model IEnumerable<BlogApp.Models.BlogPost>
@using BlogApp.Enums
@using BlogApp.Services
@using BlogApp.Services.Interfaces

@inject IImageService ImageService

@{
    ViewData["Title"] = "Index";

}
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdated)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Abstract)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>

                <th>
                    <span>Image</span>
                </th>
                <th>
                    Tag Count
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        Last Updated
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Abstract)
                    </td>
                    <td>
                        Deleted?
                    </td>
                    <td>
                        Published?
                    </td>
                    <td>

                        <img src="@ImageService.ConvertByteArrayToFile(item.ImageData!, item.ImageType!,(int)DefaultImage.BlogPost)" class="square-img rounded-start" alt="..." style="height:120px; width:120px">

                    </td>
                    <td>
                        @item.Tags.Count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category!.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-slug="@item.Slug">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
