@using BlogApp.Enums
@using BlogApp.Services.Interfaces;
@using Microsoft.AspNetCore.Identity;



@inject IImageService _ImageService
@inject UserManager<BlogUser> _UserManager


<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Blog by Danny</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/BlogByDannyIcon.svg">

    <!-- CSS
    ============================================ -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/vendor/font-awesome.css">
    <link rel="stylesheet" href="~/assets/css/vendor/slick.css">
    <link rel="stylesheet" href="~/assets/css/vendor/slick-theme.css">
    <link rel="stylesheet" href="~/assets/css/vendor/base.css">
    <link rel="stylesheet" href="~/assets/css/plugins/plugins.css">


    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/DannyStyles.css">

    <!--FA Icon-->
    <script src="https://kit.fontawesome.com/d51cbffb52.js" crossorigin="anonymous"></script>




</head>

<body>

    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("AuthorPage", "Home", new { area = "" })">
    </form>

    <div class="main-wrapper">
        <div class="mouse-cursor cursor-outer"></div>
        <div class="mouse-cursor cursor-inner"></div>

        <div id="my_switcher" class="my_switcher">
        <ul>
        <li>
        <a href="javascript: void(0);" data-theme="light" class="setColor light">
        <span title="Light Mode">Light</span>
        </a>
        </li>
        <li>
        <a href="javascript: void(0);" data-theme="dark" class="setColor dark">
        <span title="Dark Mode">Dark</span>
        </a>
        </li>
        </ul>
        </div>
        
        <!-- Start Header -->
        <header class="header axil-header headerfixed header-light header-sticky header-with-shadow">
            <div class="header-wrap">
                <div class="row justify-content-between align-items-center">
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-3 col-12">
                        <div class="logo">
                            <a href="index.html">
                                <img src="~/img/BlogByDannyIcon.svg" alt="Blog by Danny Icon">

                            </a>
                        </div>
                    </div>

                    <div class="col-xl-6 d-none d-xl-block">
                        <div class="mainmenu-wrapper">
                            <nav class="mainmenu-nav">
                                <div class="col-xl-6 d-none d-xl-block">
                                    <div class="mainmenu-wrapper">
                                        <nav class="mainmenu-nav">
                                            <!-- Start Mainmanu Nav -->
                                            <ul class="mainmenu">
                                                <li class="menu-item-has-children">
                                                    <a asp-controller="Home" asp-action="AuthorPage">Home</a>
                                                </li>

                                                @if (User.IsInRole("Administrator") == false)
                                                {
                                                    <li class="menu-item-has-children">
                                                        <a href="#">Posts</a>
                                                        <ul class="axil-submenu">
                                                            <li>
                                                                <a asp-controller="BlogPosts" asp-action="Index">
                                                                    <span class="">
                                                                        <span>All Posts</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" href="post-format-video.html">
                                                                    <span class="hover-flip-item">
                                                                        <span> data-text="Popular Posts"Popular Posts</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" href="post-format-video.html">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="Recent Posts">Recent Posts</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </li>
                                                    <li class="menu-item-has-children">
                                                        <a asp-controller="EmailData" asp-action="Index">Contact Me</a>
                                                    </li>
                                                }







                                                @if (User.IsInRole("Administrator"))
                                                {
                                                    <li class="menu-item-has-children">
                                                        <a href="#">Admin Options</a>
                                                        <ul class="axil-submenu">
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" asp-controller="BlogPosts" asp-action="Create">
                                                                    <span class="">
                                                                        <span>New Post</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" asp-controller="BlogPosts" asp-action="Index">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="Manage Posts">Manage Posts</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" asp-controller="Categories" asp-action="Index">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="Manage Categories">Manage Categories</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="hover-flip-item-wrapper" asp-controller="Tags" asp-action="Index">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="Manage Tags">Manage Tags</span>
                                                                    </span>
                                                                </a>
                                                            </li>
                                                            <li class="menu-item-has-children">
                                                                <a asp-controller="EmailData" asp-action="Index">Contact Me</a>
                                                            </li>
                                                        </ul>
                                                    </li>
                                                }
                                            </ul>
                                            <!-- End Mainmanu Nav -->
                                        </nav>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-8 col-md-8 col-sm-9 col-12">
                        <div class="header-search text-end d-flex align-items-center">
                            <form class="header-search-form d-sm-block d-none" asp-controller="BlogPosts" asp-action="SearchIndex">
                                <div class="axil-search form-group">
                                    <button type="submit" class="search-button"><i class="fal fa-search"></i></button>
                                    <input type="text" class="form-control" placeholder="Search" name="SearchTerm" id="SearchTerm">
                                </div>
                            </form>
                            <div class="mobile-search-wrapper d-sm-none d-block">
                                <button class="search-button-toggle"><i class="fal fa-search"></i></button>
                                <form asp-controller="BlogPosts" asp-action="SearchIndex" class="header-search-form">
                                    <div class="axil-search form-group">
                                        <button type="submit" class="search-button"><i class="fal fa-search"></i></button>
                                        <input type="text" class="form-control" placeholder="Search" name="SearchTerm" id="SearchTerm" />
                                    </div>
                                </form>
                            </div>

                            <ul class="metabar-block">
                                @if (User.Identity!.IsAuthenticated == false)
                                {
                                    <li class=""><a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                                }
                                else
                                {

                                    BlogUser blogUser = await _UserManager.GetUserAsync(User);

                                    <li class=""><a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit();"><i class="fa fa-sign-out fa-3x" aria-hidden="true"></i></a></li>
                                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img src="@_ImageService.ConvertByteArrayToFile(blogUser.ImageData!, blogUser.ImageType!, (int)DefaultImage.BlogUser)" alt="Author Images"></a></li>
                                }
                            </ul>
                            <!-- Start Hamburger Menu  -->
                            <div class="hamburger-menu d-block d-xl-none">
                                <div class="hamburger-inner">
                                    <div class="icon"><i class="fal fa-bars"></i></div>
                                </div>
                            </div>
                            <!-- End Hamburger Menu  -->
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Start Header -->
        @RenderBody()

        <!-- Start Footer Area  -->
        <footer class="footer mt-5">
            <div class="container-fluid">
                <div class="row row-cols-1 row-cols-md-3 gy-4">
                    <div class="col order-last order-md-first">
                        <span class="muted">&copy; 2022 Danny Schellenberger | dleeschell@gmail.com</span>
                    </div>
                    <div class="col text-center">
                        <a rel="noopener" class="nav-link" href="https://dannydevportfolio.netlify.app/" target="_blank"><img src="/img/DannyLogo2022white.svg" alt="Danny DS Monogram" height="40"></a>
                    </div>
                    <div class="col d-flex justify-content-center justify-content-lg-end">
                        <div class="row">
                            <div class="col social">
                                <a rel="noopener" href="https://www.linkedin.com/in/danny-schellenberger-9b4b0166/" target="_blank"><i class="bi bi-linkedin"></i></a>
                            </div>
                            <div class="col social">
                                <a rel="noopener" href="https://github.com/RokitDan/" target="_blank"><i class="bi bi-github"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- End Footer Area  -->
        <!-- Start Back To Top  -->
        <a id="backto-top"></a>
        <!-- End Back To Top  -->

    </div>

    <!-- JS
    ============================================ -->
    <!-- Modernizer JS -->
    <script src="~/assets/js/vendor/modernizr.min.js"></script>
    <!-- jQuery JS -->
    <script src="~/assets/js/vendor/jquery.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/assets/js/vendor/slick.min.js"></script>
    <script src="~/assets/js/vendor/tweenmax.min.js"></script>
    <script src="~/assets/js/vendor/js.cookie.js"></script>
    <script src="~/assets/js/vendor/jquery.style.switcher.js"></script>

    <!--Sweet Alerts-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>